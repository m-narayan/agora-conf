<div id="login_div" class="blue_title">
  <div id="lightbox-logo"><span>Agora Healthcare</span></div>
  <div class="form">
    <%= form_tag session_url(:protocol => current_site.protocol), :class => "login_form" do -%>
      <div>
        <label for="login"><%= t('login.email_or_login') %></label><br/>
        <%= text_field_tag 'login', params[:login] %>
      </div>
      <div>
        <label for="password"><%= t('login.password') %></label><br/>
        <%= password_field_tag 'password' %>
      </div>
      <div class="button">
        <button type="submit" class="basic_button blue_button"><%=t("login.one")%></button>
      </div>
    <% end -%>
  </div>

  <% if current_site.shib_enabled? %>
    <div id="shib-login">
      <span><%= t('cafe.login_page.description').html_safe %></span>
      <div class="image">
        <%= link_to(image_tag("logos/cafe-logo.jpg"), shib_login_path) %>
        <%= link_to(t('cafe.login_page.click_here_to_login'), shib_login_path) %>
      </div>
      <span><%= t('read_more') %>:</span>
      <ul>
        <li><%= link_to(t('cafe.login_page.more_about_cafe'), "http://www.rnp.br/servicos/cafe.html") %></li>
      </ul>
    </div>
  <% end %>

</div>
